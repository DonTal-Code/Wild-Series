{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <h1>Episode index</h1>
    <a href="{{ path('episode_new') }}">Create new</a>
    <table class="table">
        <thead>
        <tr>

            <th>Serie</th>
            <th>Saison Number</th>
            <th>Episode Number</th>
            <th>Title</th>
            <th>Synopsis</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>

                <td>{{ episode.season.program.title }}</td>
                <td>{{ episode.season.id }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>
                    <a href="{{ path('episode_show', {id: episode.slug}) }}">show</a>
                    <a href="{{ path('episode_edit', {slug: episode.slug}) }}">edit</a>

                    {{ include('episode/_delete_form.html.twig') }}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
