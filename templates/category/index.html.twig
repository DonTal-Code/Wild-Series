{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <h1>        {{ 'Categories'|trans }}
        : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }} </h2>
            <a href="{{ path("category__show", { categoryName: category.name }) }}">{{ 'Show Details'|trans }}</a>
        </div>
    {% else %}
        {{ 'No Records Found'|trans }}
    {% endfor %}
    <a href="{{ path('category_new') }}">
        {{ 'Add a Category'|trans }}
    </a>

    <a href="{{ path('app_index') }}">
        {{ 'Back To Home'|trans }}
    </a>



{% endblock %}
